function solve(args){ 

 var nums = +args[0]; 
 var input = args[1].split(' ').map(Number); 
 var counter = 0;  
 
 for (var i = 1; i < nums-1; i++) {
    
    if ((input[i]>input[i-1])&&(input[i]>input[i+1])) {
      counter += 1;}
      
      else{
      
       continue;      }
   }
   
 console.log(counter); } 
